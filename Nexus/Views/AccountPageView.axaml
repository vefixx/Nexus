<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Nexus.ViewModels"
			 mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Nexus.Views.AccountPageView"
			 x:DataType="vm:AccountPageViewModel">
	<Grid RowDefinitions="*" ColumnDefinitions="*">
		<Border Grid.Row="0"
				Margin="30 10 30 30"
				Padding="10"
				BorderBrush="Gray"
				BorderThickness="1"
				CornerRadius="5">
			<Grid RowDefinitions="Auto Auto Auto" ColumnDefinitions="*">
				<!--Хедер страницы с информацией об аккаунте, или кнопкой Войти-->
				<Grid Grid.Row="0" Name="HeaderGrid" RowDefinitions="Auto" ColumnDefinitions="*">
				</Grid>
			</Grid>
		</Border>
	</Grid>
</UserControl>
